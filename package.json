{
  "name": "@vikr01/renovate-config",
  "license": "MIT",
  "author": "vikr01 <vik120@icloud.com>",
  "repository": "https://github.com/vikr01/renovate-config.git",
  "version": "0.1.0",
  "main": "renovate.json",
  "files": [],
  "scripts": {
    "fix": "prettier --write '**/*.{json,md,js,jsx,css,scss,less,yml}'",
    "postfix": "prettier-package-json --write package.json",
    "prepublishOnly": "renovate-config-validator",
    "test": "renovate-config-validator"
  },
  "devDependencies": {
    "husky": "^1.2.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "prettier-package-json": "^2.0.1",
    "renovate": "latest"
  },
  "keywords": [
    "renovate-config",
    "renovate-preset"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,md,js,jsx,css,scss,less,yml}": [
        "prettier --write",
        "git add"
      ],
      "package.json": [
        "prettier-package-json --write",
        "git add"
      ]
    },
    "globOptions": {
      "dot": true
    }
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "rangeStrategy": "bump",
      "engines": {
        "enabled": false
      },
      "separateMinorPatch": true,
      "packageRules": [
        {
          "packagePatterns": [
            "(^|.*-)(eslint|prettier|stylelint)(-.*|$)"
          ],
          "groupName": "linters"
        }
      ],
      "schedule": "after 6am and before 5pm on saturday",
      "timezone": "America/Los_Angeles"
    }
  }
}
